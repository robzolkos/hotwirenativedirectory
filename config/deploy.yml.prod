service: hotwire-native-directory

image: ghcr.io/robzolkos/hotwirenativedirectory

servers:
  web:
    hosts:
      - 5.161.197.35

proxy:
  ssl: true
  hosts:
    - hotwirenative.directory
    - turbonative.directory

registry:
  server: ghcr.io
  username:
    - KAMAL_REGISTRY_USERNAME
  password:
    - KAMAL_REGISTRY_PASSWORD
env:
  secret:
    - RAILS_MASTER_KEY

volumes:
  - storage:/rails/storage

builder:
  cache:
    type: gha
  arch:
    - amd64
